<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    	<RelativeLayout 
        android:id="@+id/advice_lost_layout"   
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    	<ImageView
		    android:id="@+id/setting"
	     	android:layout_width="32dp"
	        android:layout_height="32dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="7dp"
	        android:background="@drawable/ic_settings_white"
	        />
	    
	    	<TextView
		    android:id="@+id/advice_txt"
	     	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="12.5dp"
	        android:layout_marginRight="12.5dp"
	        android:layout_marginLeft="12.5dp"
	        android:padding="10dp"
	        android:text="안녕하세요, 회원님!\n회원님을 도와드릴 채팅로봇 '켓' 입니다.\n무엇을 도와드릴까요??"
	        android:textColor="#000000"
	        android:textSize="13dp"
	        android:background="@drawable/message_area_white"
	        />
	    	
